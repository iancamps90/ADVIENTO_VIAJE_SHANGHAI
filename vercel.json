{
    "version": 2,
    "name": "shanghai-advent-journey",
    "builds": [
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "NODE_VERSION": "18"
    },
    "functions": {
        "build.sh": {
            "maxDuration": 300
        }
    }
}