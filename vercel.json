{
    "version": 2,
    "builds": [
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        },
        {
            "src": "api/webhook.py",
            "use": "@vercel/python"
        },
        {
            "src": "api/daily-message.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        }
    ],
    "env": {
        "NODE_VERSION": "20",
        "META_ACCESS_TOKEN": "@meta_access_token",
        "META_PHONE_NUMBER_ID": "@meta_phone_number_id",
        "META_VERIFY_TOKEN": "@meta_verify_token"
    }
}