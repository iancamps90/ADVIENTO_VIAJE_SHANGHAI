{
    "version": 2,
    "name": "shanghai-advent-calendar",
    "builds": [
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "NODE_VERSION": "20",
        "META_ACCESS_TOKEN": "@meta_access_token",
        "META_PHONE_NUMBER_ID": "@meta_phone_number_id",
        "META_VERIFY_TOKEN": "@meta_verify_token"
    },
    "functions": {
        "api/webhook.py": {
            "runtime": "python3.9"
        },
        "api/daily-message.py": {
            "runtime": "python3.9"
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}